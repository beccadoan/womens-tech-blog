<h1>{{headline}}</h1>
{{#if homePage}}
{{#if loggedIn}}
<form class="new-post">
  <label for="post-title">Title</label>
  <input name="post-title" type="text">
  <label for="post-body">Body</label>
  <input name="post-body" type="text">
  <button type="submit">Post</button>
</form>
{{/if}}
{{/if}}
<ol class="post-list">
 {{#each posts as |post|}}
  <li>
    {{> post-info post}}
  </li>
  {{/each}}
</ol>

{{#if pageType.home}}
{{#if loggedIn}}
<script src="/javascript/newpost.js"></script>
{{/if}}
{{/if}}
